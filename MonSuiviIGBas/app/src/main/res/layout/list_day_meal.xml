<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/en_tete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="date" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_below="@+id/date"/>

        <Button
            android:id="@+id/add_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="add comment"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/en_tete">
        <TextView
            android:id="@+id/title_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="petit dejeuner" />
        <Button
            android:id="@+id/add_breakfast_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_breakfast"
            android:text="add breakfast"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/add_breakfast_btn"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/breakfast">

        <TextView
            android:id="@+id/title_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="lunch" />

        <Button
            android:id="@+id/add_lunch_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/title_lunch"
            android:text="add lunch"/>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/add_lunch_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="dinner" />

        <Button
            android:id="@+id/add_dinner_btn"
            android:text="add dinner"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_dinner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/add_dinner_btn"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/collation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dinner">

        <TextView
            android:id="@+id/title_collation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="collation" />

        <Button
            android:id="@+id/add_collation_btn"
            android:text="add collation"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_collation" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/add_collation_btn"/>
    </RelativeLayout>



</LinearLayout>

